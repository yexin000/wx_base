<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.trustway.weixin.dao.BusinessDao">
    <!-- Result Map -->
    <resultMap id="BaseResultMap" type="cn.trustway.weixin.bean.Business">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="address" property="address" />
        <result column="createTime" property="createTime" />
        <result column="updateTime" property="updateTime" />
        <result column="telNum" property="telNum" />
        <result column="logoPath" property="logoPath" />
        <result column="status" property="status" />
        <result column="isShow" property="isShow" />
    </resultMap>

    <!-- sys_menu table all fields -->
    <sql id="Base_Column_List">
		id,name,address,createTime,updateTime,telNum,logoPath,status,isShow
	</sql>

    <!-- 插入记录 -->
    <insert id="add" parameterType="Object">
        insert into
        t_e_business(id,name,address,createTime,updateTime,telNum,logoPath,status,isShow)
        values(null,#{name},#{address},now(),now(),#{telNum},#{logoPath}, '1',#{isShow})
    </insert>

    <!-- 根据id，修改记录 -->
    <update id="update" parameterType="Object">
		update t_e_business set
		id=#{id},name=#{name},address=#{address},updateTime=sysdate,
		telNum=#{telNum},logoPath=#{logoPath},status=#{status},isShow=#{isShow} where id=#{id}
	</update>

    <!-- 修改记录，只修改只不为空的字段 -->
    <update id="updateBySelective" parameterType="Object">
        update t_e_business set updateTime=now()
        <if test="name != null and name != '' ">
            ,name=#{name}
        </if>
        <if test="address != null and address != '' ">
            ,address=#{address}
        </if>
        <if test="telNum != null and telNum != '' ">
            ,telNum=#{telNum}
        </if>
        <if test="logoPath != null and logoPath != '' ">
            ,logoPath=#{logoPath}
        </if>
        <if test="status != null and status != '' ">
            ,status=#{status}
        </if>
        <if test="isShow != null and isShow != '' ">
            ,isShow=#{isShow}
        </if>
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <update id="delete" parameterType="Object">
		update t_e_business set status = '0' where id = #{id}
	</update>

    <!-- 根据id查询记录 -->
    <select id="queryById" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from t_e_business where id = #{id}
    </select>

    <!-- 根据id查询统计和记录 -->
    <select id="queryCountById" resultMap="BaseResultMap" parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from t_e_business where id = #{id}
    </select>

    <!-- 记录总数 -->
    <select id="queryByCount" resultType="java.lang.Integer"
            parameterType="Object">
        select count(1) from t_e_business
    </select>

    <!-- 分页查询记录列表 -->
    <select id="queryByList" resultMap="BaseResultMap" parameterType="Object">
        select
          <include refid="Base_Column_List" />
        from t_e_business
        where 1=1 and status = '1'
        <trim suffixOverrides=",">
            <if test="name != null and name != ''">
                and name like CONCAT('%', #{name}, '%')
            </if>
            <if test="isShow != null and isShow != ''">
                and isshow = #{isShow}
            </if>
        </trim>
        order by updatetime desc
        <if test="pager.orderCondition != null and pager.orderCondition != ''">
            ${pager.orderCondition}
        </if>
        <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''">
            ${pager.mysqlQueryCondition}
        </if>
    </select>
</mapper>
